doctype html
html
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        title
    body
        div.form-row
            div.col.form-group.col-md-9    
                form.search(action='/mangoes')
                    div.form-row
                        div.col-md-8
                            input.form-control(name='firstName' placeholder="Enter your search term ...")
                        div.col-md-4
                            input.btn.btn-dark.btn-block(type="submit")
        table.table.table-hover
            thead.thead-dark
                tr
                    th First Name   
                    th Last Name
                    th Date of birth
                    th Email Address
                    th Supervisors
                    th Working Day's
                    th Sales Id
                    th Password
                    th Action
            tbody
                each user in users
                    tr
                        td #{user.fname}
                        td #{user.lname}
                        td #{user.dob}  
                        td #{user.emailAd}
                        td #{user.super}
                        td #{user.dutyDays}
                        td #{user.id}
                        td #{user.pass}
                        td
                           form(method="post" action="/addsalesExecutive/delete")
                                input(type="hidden", placeholder="", name="id", value=user._id)
                                button.btn.btn-dark.btn-block(type="Submit") Delete